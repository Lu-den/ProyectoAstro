---
import { getCollection } from "astro:content";
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import imgBlog from '../avecolor.png';

const allPosts = await getCollection("blog");
const pageTitle = "Works";
---
<BaseLayout>
  <div class="flex flex-col items-center justify-cente">
    <h1 class="font-mono font-medium">{pageTitle}</h1>
    <p class="font-mono text-lg">This is where I will post about my journey learning Astro.</p>
    <img class="md: mt-30 " src={imgBlog.src} alt="Imagen de ave colorida">
  </div>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={`/posts/${post.id}/`} title={post.data.title} />
      ))
    }
  </ul>
</BaseLayout>